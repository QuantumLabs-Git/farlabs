# Far Node Server Configuration
# Copy this file to .env and fill in your details

# REQUIRED: Your Ethereum wallet address to receive $FAR tokens
FAR_NODE_WALLET=0x742d35Cc6634C0532925a3b844Bc454e4438f44e

# Model to serve (default: Llama-2-7b-chat)
FAR_NODE_MODEL=meta-llama/Llama-2-7b-chat-hf

# Public address for this node (auto-detect if not set)
# Format: IP:PORT or DOMAIN:PORT
FAR_NODE_PUBLIC_ADDR=auto

# Discovery service URL
FAR_DISCOVERY_URL=http://discovery.farlabs.ai

# DHT Bootstrap node (will be provided by discovery service if not set)
FAR_MESH_DHT_BOOTSTRAP=

# Port for Petals P2P communication
FAR_NODE_PORT=31330

# Model precision (float16, int8, or int4)
# Lower precision = less VRAM but slightly lower quality
FAR_NODE_DTYPE=float16

# Optional: Number of transformer blocks to serve
# Leave empty for auto-detection based on available VRAM
FAR_NODE_NUM_BLOCKS=
